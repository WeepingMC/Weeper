@@ -334,9 +341,16 @@ public class CraftHumanEntity extends CraftLivingEntity implements HumanEntity {
     }
 
     private static void openCustomInventory(Inventory inventory, ServerPlayer player, MenuType<?> windowType) {
+        openCustomInventory( inventory, player, windowType, null);
+    }
+    private static void openCustomInventory(Inventory inventory, ServerPlayer player, MenuType<?> windowType, @Nullable Function<ItemStack, Boolean> mayPlaceStrategy) {
         if (player.connection == null) return;
         Preconditions.checkArgument(windowType != null, "Unknown windowType");
         AbstractContainerMenu container = new CraftContainer(inventory, player, player.nextContainerCounter());
+        if(mayPlaceStrategy != null){
+            Container top = ((CraftInventory) inventory).getInventory();
+            top.setMayPlaceStrategy(itemStack -> mayPlaceStrategy.apply(CraftItemStack.asBukkitCopy(itemStack)));
+        }
 
         container = CraftEventFactory.callInventoryOpenEvent(player, container);
         if (container == null) return;
